<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:NetStalkerAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NetStalkerAvalonia.Components.StatsBox">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Horizontal" Spacing="10">
        <Border Classes="label">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Devices:" />
                <TextBlock Text="{Binding Devices.Count}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>