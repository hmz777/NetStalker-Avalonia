<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:convs="using:NetStalkerAvalonia.Converters"
			 xmlns:attProp="using:NetStalkerAvalonia.Helpers"
			 mc:Ignorable="d"
			 x:Class="NetStalkerAvalonia.Components.ImageButton">
	
	<UserControl.Resources>
		<convs:StringToImageSourceConverter x:Key="StrToImgSrcConv"/>
		<ControlTemplate x:Key="NavBtn" TargetType="Button">
			<Border
				Padding="1"
				BorderThickness="2"
				CornerRadius="5"
				Width="55"
				Height="55"
				BorderBrush="{Binding Theme.NavElementBorder}">
				<StackPanel>
					<Image Source="{TemplateBinding attProp:AttachedProperties.Icon, Converter={StaticResource StrToImgSrcConv}}"
						   Width="35"
						   Height="35"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
					<TextBlock Text="{TemplateBinding attProp:AttachedProperties.Text}"
							   FontSize="9"
							   FontWeight="Bold"
							   Foreground="{Binding Theme.NavElementText}"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Bottom"
							   Margin="0,2,0,0"/>
				</StackPanel>
			</Border>
		</ControlTemplate>
	</UserControl.Resources>

	<UserControl.Styles>
		<Style Selector="Button.hoverable /template/ Border">
			<Setter Property="Background" Value="{Binding Theme.NavElementBackground}"/>
		</Style>
		<Style Selector="Button.hoverable /template/ Border:pointerover">
			<Setter Property="Background" Value="{Binding Theme.AccentColor}"/>
		</Style>
	</UserControl.Styles>

	<Button IsEnabled="{Binding $parent.IsEnabled}"
			Classes="hoverable"
			attProp:AttachedProperties.Text="{Binding $parent[UserControl].TextContent}"
			attProp:AttachedProperties.Icon="{Binding $parent[UserControl].IconSource}"
			Command="{Binding $parent[UserControl].Command}"
			Template="{StaticResource NavBtn}"/>
</UserControl>