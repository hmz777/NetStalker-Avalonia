<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 xmlns:cmpts="using:NetStalkerAvalonia.Components"
             x:Class="NetStalkerAvalonia.Components.PageTitle">
	<Border Margin="15">
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
			<Button Command="{Binding GoBackHandler}" IsVisible="{Binding CanGoBack}">
				<Image Source="/Assets/NavIcons/back.png"/>
			</Button>
			<TextBlock Text="{Binding $parent[UserControl].Text}"
			   Foreground="{Binding Theme.PageTitleColor}"
			   FontSize="{Binding Theme.PageTitleSize}"/>
		</StackPanel>
	</Border>
</UserControl>