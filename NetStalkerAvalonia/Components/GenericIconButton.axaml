<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="using:NetStalkerAvalonia.Components"
		xmlns:convos="using:NetStalkerAvalonia.Converters">
	<Design.PreviewWith>
		<!--<controls:GenericIconButton />-->
	</Design.PreviewWith>

	<Style Selector="controls|GenericIconButton">

		<Setter Property="Template">
			<ControlTemplate>
				<Border Classes="container"
						HorizontalAlignment="Stretch"
						Background="{TemplateBinding Background}"
						CornerRadius="2"
						Padding="0">
					<Button CornerRadius="2"
							Command="{TemplateBinding Command}"
							CommandParameter="{TemplateBinding CommandParameter}"
							HorizontalAlignment="Stretch">
						<StackPanel Orientation="Horizontal"
									HorizontalAlignment="Center"
									VerticalAlignment="Center">
							<Image Classes="icon"
								   Width="25"
								   Height="25"
								   Margin="0,0,10,0"
								   VerticalAlignment="Center"
								   Source="{TemplateBinding Icon, Converter={x:Static convos:ImageConverters.FromPath}}"/>
							<TextBlock Classes="text"
									   VerticalAlignment="Center"
									   Text="{TemplateBinding Text}"/>
						</StackPanel>
					</Button>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>