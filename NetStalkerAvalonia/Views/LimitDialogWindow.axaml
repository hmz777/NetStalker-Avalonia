<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NetStalkerAvalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NetStalkerAvalonia.Views.LimitDialogWindow"
        Title="LimitDialogWindow">

    <Design.DataContext>
        <vm:LimitDialogViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <NumericUpDown Minimum="0" Value="{Binding DeviceLimitResult.Download}" />
            <NumericUpDown Minimum="0" Value="{Binding DeviceLimitResult.Upload}" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Command="{Binding Apply }">Set</Button>
        </StackPanel>
    </Grid>
</Window>